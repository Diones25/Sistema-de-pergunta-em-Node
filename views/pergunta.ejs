<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    
    <div class="container">
        <div class="d-flex justify-content-end mt-4">
            <a href="/" class="btn btn-primary">voltar</a>
        </div>
        <div class="card mt-4 mb-3">
            <div class="card-header">
                <h1><%= pergunta.title%></h1>
            </div>
            <div class="card-body">
                <p><%= pergunta.description%></p>
            </div>
        </div>
        
        <form action="/responder" method="post">
            <h3>Responda!</h3>
            <label for="res">Resposta</label>
            <textarea class="form-control mb-3" name="corpo" id="res" cols="20" rows="5" placeholder="Digite sua resposta"></textarea>
            <input type="hidden" name="pergunta" id="" value="<%= pergunta.id%>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>

        <h3 class="mt-3">Ãšltimas respostas</h3>
        
        <% respostas.forEach(resposta =>{%>
            <div class="alert alert-success" role="alert">
                <%= resposta.corpo%>
            </div>
        <% }) %>

    </div>


    <!--Primeiro jQuery depois Javascript-->
    <script src="/js/jquery-3.6.0.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
<%- include ('partials/footer.ejs') %>